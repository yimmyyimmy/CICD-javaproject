pipeline {
    agent {  label "java" }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('jacoco') {
            steps {
                jacoco()
            }
        }
        stage('run the container')
            {
            agent { label 'docker' }
       steps{
           sshagent(['docker_ssh_agent_cred_to_run']) {
          sh "ssh -i /home/ec2-user/Linux.pem ubuntu@172.31.3.167 'docker run -d -p 5050:8080 tommy'"
}
}
      }
}
}


